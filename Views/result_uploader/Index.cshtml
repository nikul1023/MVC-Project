@model IEnumerable<resultMVC.Student>

@{
    ViewBag.Title = "update pointer";
}

<h2>update pointers</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.semister)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Branch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pointer)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model.Where(a => a.Branch == Session["ub"].ToString()))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.semister)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pointer)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                
               
            </td>
        </tr>
    }

</table>
